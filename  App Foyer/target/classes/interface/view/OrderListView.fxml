<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="OrderListController" spacing="10" styleClass="content">
    <children>
        <Label fx:id="titleLabel" text="Orders" styleClass="section-title"/>
        <ListView fx:id="orderListView" prefHeight="400.0" VBox.vgrow="ALWAYS" />
        <Label fx:id="emptyStateLabel" text="No orders available" visible="false"
               styleClass="empty-state"/>
        <HBox spacing="10">
            <children>
                <Button text="Refresh" onAction="#refreshOrders"/>
                <ComboBox fx:id="timeFilterComboBox" promptText="Time filter" visible="false" managed="false"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>
</VBox>
